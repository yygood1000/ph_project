<?xml version="1.0" encoding="utf-8"?><!-- 发货 -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_submit">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1F3F7"
            android:orientation="vertical">

            <!-- 发货信息 -->
            <RelativeLayout
                android:id="@+id/rl_deliver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_8"
                android:layout_marginRight="@dimen/spacing_8"
                android:layout_marginTop="@dimen/spacing_8"
                android:background="@drawable/shape_bg_deliver_goods_01"
                android:clickable="true"
                android:minHeight="120dp">

                <LinearLayout
                    android:id="@+id/ll00000000000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_8"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_default_point" />

                    <TextView
                        android:id="@+id/tv_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_6"
                        android:text="@string/deliver_info"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size16" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/ll00000000000001"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll00000000000000"
                    android:layout_marginTop="@dimen/spacing_18"
                    android:orientation="horizontal"
                    android:paddingLeft="48dp"
                    android:paddingRight="48dp">

                    <TextView
                        android:id="@+id/tv_deliver_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:hint="@string/please_select_deliver_address"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/text_size20" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll00000000000002"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll00000000000001"
                    android:layout_marginTop="@dimen/spacing_8"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_deliver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size14" />

                    <TextView
                        android:id="@+id/tv_deliver_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_15"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_to_deliver"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:minHeight="120dp"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/v_start"
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/tv_to_deliver"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="@dimen/spacing_10"
                        android:text="补充信息" />
                </LinearLayout>
            </RelativeLayout>

            <!-- 收货信息 -->
            <RelativeLayout
                android:id="@+id/rl_receipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_8"
                android:layout_marginRight="@dimen/spacing_8"
                android:layout_marginTop="@dimen/spacing_8"
                android:background="@drawable/shape_bg_deliver_goods_02"
                android:minHeight="120dp">

                <LinearLayout
                    android:id="@+id/rl000000000000000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_8"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_end_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_default_point" />

                    <TextView
                        android:id="@+id/tv_end_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_6"
                        android:text="@string/receipt_info"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size16" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl000000000000000001"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl000000000000000000"
                    android:layout_marginTop="@dimen/spacing_18"
                    android:orientation="horizontal"
                    android:paddingLeft="48dp"
                    android:paddingRight="48dp">

                    <TextView
                        android:id="@+id/tv_receipt_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:hint="@string/please_select_receipt_address"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/text_size20" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/rl000000000000000002"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl000000000000000001"
                    android:layout_marginTop="@dimen/spacing_8"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_receipt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size14" />

                    <TextView
                        android:id="@+id/tv_receipt_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_15"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_to_receipt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:minHeight="120dp"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/v_end"
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/tv_to_receipt"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="@dimen/spacing_10"
                        android:text="补充信息" />
                </LinearLayout>
            </RelativeLayout>

            <!-- 里程 -->
            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_8"
                android:gravity="center"
                android:text="预计里程约：1532公里"
                android:textColor="@color/text_color_969696"
                android:textSize="@dimen/text_size13"
                android:visibility="gone" />

            <!-- 货物数量 -->
            <LinearLayout
                android:id="@+id/ll_goods_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_8"
                android:layout_marginRight="@dimen/spacing_8"
                android:layout_marginTop="@dimen/spacing_8"
                android:background="@drawable/shape_bg_deliver_goods_01"
                android:minHeight="120dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/spacing_2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_fixed_select"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_fixed_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/spacing_6"
                            android:text="@string/fixed"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size16" />

                        <View
                            android:id="@+id/v_fixed_select"
                            android:layout_width="28dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:background="@color/white" />
                    </LinearLayout>

                    <View
                        android:id="@+id/v_fen"
                        android:layout_width="1px"
                        android:layout_height="20dp"
                        android:background="@color/white" />

                    <LinearLayout
                        android:id="@+id/ll_range_select"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_range_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/spacing_6"
                            android:text="@string/range"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size16" />

                        <View
                            android:id="@+id/v_range_select"
                            android:layout_width="28dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:background="@color/transparent_100" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_18">

                    <EditText
                        android:id="@+id/et_goods_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/please_input_goods_number"
                        android:inputType="numberDecimal"
                        android:maxLength="10"
                        android:textColor="@color/text_color_222222"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/text_size20"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/ll_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/et_min_amount_trend"
                            style="@style/dialog_input_edit"
                            android:hint="最小值"
                            android:text="" />

                        <View
                            android:id="@+id/v_gang"
                            android:layout_width="12dp"
                            android:layout_height="2dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/white" />

                        <EditText
                            android:id="@+id/et_max_amount_trend"
                            style="@style/dialog_input_edit"
                            android:hint="最大值"
                            android:text="" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_unit"
                        android:text="@string/default_unit" />

                    <ImageView
                        android:id="@+id/iv_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_bottom_arrow_white" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/gv_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_goods_quantity"
                    android:layout_marginTop="@dimen/spacing_30"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- 车型车长 -->
            <RelativeLayout
                android:id="@+id/rl_type_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_8"
                android:layout_marginRight="@dimen/spacing_8"
                android:layout_marginTop="@dimen/spacing_8"
                android:background="@drawable/shape_bg_deliver_goods_03"
                android:minHeight="120dp">

                <TextView
                    android:id="@+id/tv_type_length_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_8"
                    android:gravity="center"
                    android:text="@string/type_length"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size16" />

                <ImageView
                    android:id="@+id/iv_type_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/spacing_6"
                    android:src="@drawable/icon_right_arrow_white" />

                <TextView
                    android:id="@+id/tv_type_length"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:hint="@string/please_select_type_length"
                    android:paddingLeft="48dp"
                    android:paddingRight="48dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/text_size20" />
            </RelativeLayout>

            <!-- 提货付 -->
            <RelativeLayout
                android:id="@+id/rl_ahead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_8"
                android:background="@color/white"
                android:paddingLeft="@dimen/spacing_8"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_ahead_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/ahead"
                    android:textColor="@color/text_color_222222"
                    android:textSize="@dimen/text_size15" />

                <EditText
                    android:id="@+id/et_ahead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_ahead_unit"
                    android:layout_toRightOf="@+id/tv_ahead_title"
                    android:background="@null"
                    android:hint="@string/please_input_amount"
                    android:inputType="numberDecimal"
                    android:paddingBottom="@dimen/spacing_18"
                    android:paddingLeft="@dimen/spacing_28"
                    android:paddingTop="@dimen/spacing_18"
                    android:textColor="@color/text_color_222222"
                    android:textColorHint="@color/text_color_CCCCCC"
                    android:textSize="@dimen/text_size15" />

                <TextView
                    android:id="@+id/tv_ahead_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/cb_ahead"
                    android:paddingBottom="@dimen/spacing_18"
                    android:paddingTop="@dimen/spacing_18"
                    android:text="@string/yuan"
                    android:textColor="@color/text_color_222222"
                    android:textSize="@dimen/text_size15" />

                <CheckBox
                    android:id="@+id/cb_ahead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="@dimen/spacing_8"
                    android:background="@drawable/selector_bg_white_to_green"
                    android:button="@null"
                    android:checked="true"
                    android:paddingBottom="@dimen/spacing_2"
                    android:paddingLeft="@dimen/spacing_10"
                    android:paddingRight="@dimen/spacing_10"
                    android:paddingTop="@dimen/spacing_2"
                    android:text="托管"
                    android:textColor="@color/selector_textcolor_gray_to_white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/et_ahead"
                    android:background="@color/color_dddddd" />
            </RelativeLayout>

            <!-- 到货付 -->
            <RelativeLayout
                android:id="@+id/rl_delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/spacing_8"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_delivery_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/delivery"
                    android:textColor="@color/text_color_222222"
                    android:textSize="@dimen/text_size15" />

                <EditText
                    android:id="@+id/et_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_delivery_unit"
                    android:layout_toRightOf="@+id/tv_delivery_title"
                    android:background="@null"
                    android:hint="@string/please_input_amount"
                    android:inputType="numberDecimal"
                    android:paddingBottom="@dimen/spacing_18"
                    android:paddingLeft="@dimen/spacing_28"
                    android:paddingTop="@dimen/spacing_18"
                    android:textColor="@color/text_color_222222"
                    android:textColorHint="@color/text_color_CCCCCC"
                    android:textSize="@dimen/text_size15" />

                <TextView
                    android:id="@+id/tv_delivery_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/cb_delivery"
                    android:paddingBottom="@dimen/spacing_18"
                    android:paddingTop="@dimen/spacing_18"
                    android:text="@string/yuan"
                    android:textColor="@color/text_color_222222"
                    android:textSize="@dimen/text_size15" />

                <CheckBox
                    android:id="@+id/cb_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="@dimen/spacing_8"
                    android:background="@drawable/selector_bg_white_to_green"
                    android:button="@null"
                    android:checked="true"
                    android:paddingBottom="@dimen/spacing_2"
                    android:paddingLeft="@dimen/spacing_10"
                    android:paddingRight="@dimen/spacing_10"
                    android:paddingTop="@dimen/spacing_2"
                    android:text="托管"
                    android:textColor="@color/selector_textcolor_gray_to_white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/et_delivery"
                    android:background="@color/color_dddddd" />
            </RelativeLayout>

            <!-- 回单付 -->
            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/spacing_8"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_back_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/payment_return"
                    android:textColor="@color/text_color_222222"
                    android:textSize="@dimen/text_size15" />

                <EditText
                    android:id="@+id/et_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_back_unit"
                    android:layout_toRightOf="@+id/tv_back_title"
                    android:background="@null"
                    android:hint="@string/please_input_amount"
                    android:inputType="numberDecimal"
                    android:paddingBottom="@dimen/spacing_18"
                    android:paddingLeft="@dimen/spacing_28"
                    android:paddingTop="@dimen/spacing_18"
                    android:textColor="@color/text_color_222222"
                    android:textColorHint="@color/text_color_CCCCCC"
                    android:textSize="@dimen/text_size15" />

                <TextView
                    android:id="@+id/tv_back_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/cb_back"
                    android:paddingBottom="@dimen/spacing_18"
                    android:paddingTop="@dimen/spacing_18"
                    android:text="@string/yuan"
                    android:textColor="@color/text_color_222222"
                    android:textSize="@dimen/text_size15" />

                <CheckBox
                    android:id="@+id/cb_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="@dimen/spacing_8"
                    android:background="@drawable/selector_bg_white_to_green"
                    android:button="@null"
                    android:paddingBottom="@dimen/spacing_2"
                    android:paddingLeft="@dimen/spacing_10"
                    android:paddingRight="@dimen/spacing_10"
                    android:paddingTop="@dimen/spacing_2"
                    android:text="托管"
                    android:textColor="@color/selector_textcolor_gray_to_white"
                    android:visibility="invisible" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/et_back"
                    android:background="@color/color_dddddd" />
            </RelativeLayout>

            <!-- 运费共计 -->
            <RelativeLayout
                android:id="@+id/rl_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/spacing_8"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_sum_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/freight_sum"
                    android:textColor="@color/text_color_222222"
                    android:textSize="@dimen/text_size15" />

                <TextView
                    android:id="@+id/tv_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_sum_unit"
                    android:layout_toRightOf="@+id/tv_sum_title"
                    android:paddingBottom="@dimen/spacing_18"
                    android:paddingLeft="@dimen/spacing_12"
                    android:paddingTop="@dimen/spacing_18"
                    android:text="---"
                    android:textColor="@color/color_btn_red"
                    android:textSize="@dimen/text_size15" />

                <TextView
                    android:id="@+id/tv_sum_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/cb_sum"
                    android:paddingBottom="@dimen/spacing_18"
                    android:paddingTop="@dimen/spacing_18"
                    android:text="@string/yuan"
                    android:textColor="@color/text_color_222222"
                    android:textSize="@dimen/text_size15" />

                <CheckBox
                    android:id="@+id/cb_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="@dimen/spacing_8"
                    android:background="@drawable/selector_bg_white_to_green"
                    android:button="@null"
                    android:paddingBottom="@dimen/spacing_2"
                    android:paddingLeft="@dimen/spacing_10"
                    android:paddingRight="@dimen/spacing_10"
                    android:paddingTop="@dimen/spacing_2"
                    android:text="托管"
                    android:textColor="@color/selector_textcolor_gray_to_white"
                    android:visibility="invisible" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/tv_sum"
                    android:background="@color/color_dddddd" />
            </RelativeLayout>

            <!-- 运费支付方式 -->
            <RelativeLayout
                android:id="@+id/rl_pay_way"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_8"
                android:background="@color/white"
                android:paddingLeft="@dimen/spacing_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/pay_way"
                    android:textColor="@color/text_color_222222"
                    android:textSize="@dimen/text_size15" />

                <TextView
                    android:id="@+id/tv_pay_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_pay_way"
                    android:paddingBottom="@dimen/spacing_18"
                    android:paddingTop="@dimen/spacing_18"
                    android:text="@string/default_pay_way"
                    android:textColor="@color/text_color_222222"
                    android:textSize="@dimen/text_size15" />

                <ImageView
                    android:id="@+id/iv_pay_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/spacing_8"
                    android:src="@drawable/icons_common_enter" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/tv_pay_way"
                    android:background="@color/color_dddddd" />
            </RelativeLayout>

            <!-- 提货时间 -->
            <RelativeLayout
                android:id="@+id/rl_take_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_8"
                android:background="@color/white"
                android:paddingLeft="@dimen/spacing_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/take_time"
                    android:textColor="@color/text_color_222222"
                    android:textSize="@dimen/text_size15" />

                <TextView
                    android:id="@+id/tv_take_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_take_time"
                    android:paddingBottom="@dimen/spacing_18"
                    android:paddingTop="@dimen/spacing_18"
                    android:text="@string/default_take_time"
                    android:textColor="@color/text_color_222222"
                    android:textSize="@dimen/text_size15" />

                <ImageView
                    android:id="@+id/iv_take_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/spacing_8"
                    android:src="@drawable/icons_common_enter" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/tv_take_time"
                    android:background="@color/color_dddddd" />
            </RelativeLayout>

            <!-- 其他货物信息 -->
            <RelativeLayout
                android:id="@+id/rl_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_8"
                android:background="@color/white"
                android:clickable="true"
                android:paddingLeft="@dimen/spacing_8">

                <TextView
                    android:id="@+id/tv_remarks_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/spacing_18"
                    android:paddingTop="@dimen/spacing_18"
                    android:text="@string/remarks"
                    android:textColor="@color/text_color_222222"
                    android:textSize="@dimen/text_size15" />

                <TextView
                    android:id="@+id/tv_remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_remarks"
                    android:paddingBottom="@dimen/spacing_18"
                    android:paddingTop="@dimen/spacing_18"
                    android:textColor="@color/text_color_222222"
                    android:textSize="@dimen/text_size15" />

                <ImageView
                    android:id="@+id/iv_remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/spacing_8"
                    android:src="@drawable/icons_common_enter" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_bg_deliver_goods_submit"
        android:orientation="vertical">
        <!-- 我保证 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="3dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spacing_8"
                android:src="@drawable/icon_deliver_good_check" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/promise"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size10" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size17" />
    </LinearLayout>
</RelativeLayout>
