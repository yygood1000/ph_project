<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_is_anonymous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_20"
            android:background="@drawable/iv_icon_anonymous"/>

        <TextView
            style="@style/tv_size_14_color_66_style"
            android:layout_marginBottom="@dimen/spacing_28"
            android:layout_marginLeft="@dimen/spacing_28"
            android:layout_marginRight="@dimen/spacing_28"
            android:layout_marginTop="@dimen/spacing_28"
            android:gravity="center"
            android:text="@string/anonymous_warning"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/spacing_8"
        android:background="@color/white"
        android:paddingLeft="@dimen/spacing_12"
        android:paddingRight="@dimen/spacing_12">

        <TextView
            style="@style/tv_size_15_color_22_style"
            android:layout_centerVertical="true"
            android:text="@string/setting_anonymous"/>

        <CheckBox
            android:id="@+id/cb_is_anonymous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_cb_button_anonymous"
            android:button="@null"
            />
    </RelativeLayout>

</LinearLayout>
