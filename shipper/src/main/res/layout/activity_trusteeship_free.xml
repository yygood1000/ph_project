<?xml version="1.0" encoding="utf-8"?><!-- 是否托管运费 -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/common_background">

    <ImageView
        android:id="@+id/iv000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/spacing_30"
        android:paddingTop="130dp"
        android:src="@drawable/ship_img_trust_null"/>

    <LinearLayout
        android:id="@+id/ll01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/spacing_12">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order_icon_point_green"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/spacing_6"
            android:paddingRight="@dimen/spacing_12"
            android:text="运费托管至560平台，确认货物安全送达后，再由平台支付给司机！"
            android:textColor="#101010"
            android:textSize="@dimen/text_size14"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll01"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/spacing_12">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order_icon_point_green"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/spacing_6"
            android:paddingRight="@dimen/spacing_12"
            android:text="托管金额保证安全，防骗货！"
            android:textColor="#101010"
            android:textSize="@dimen/text_size14"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_dddddd"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:layout_weight="1"
                android:background="@color/white"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="@dimen/spacing_14"
                android:paddingTop="@dimen/spacing_14"
                android:text="不托管运费"
                android:textColor="@color/text_color_16CA4E"
                android:textSize="@dimen/text_size17"/>

            <TextView
                android:id="@+id/tv_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_deliver_goods_submit"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="@dimen/spacing_14"
                android:paddingTop="@dimen/spacing_14"
                android:text="托管运费"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size17"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
