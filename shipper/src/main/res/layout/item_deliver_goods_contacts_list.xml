<?xml version="1.0" encoding="utf-8"?>
<!-- 发货-》信息录入界面-》联系人 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout_Match_Wrap"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <RelativeLayout
        style="@style/Layout_Match_Wrap"
        android:gravity="center"
        android:id="@+id/rl_item"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="11dp" >



        <LinearLayout
            style="@style/Layout_Match_Wrap"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_listitem_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="12dp"
                android:scaleType="centerCrop"
                android:background="@drawable/icon_user_nor" />

            <LinearLayout
                style="@style/Layout_Match_Wrap"
                android:orientation="vertical" >

                <LinearLayout
                    style="@style/Layout_Wrap_Wrap"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_listitem_address"
                        style="@style/Layout_Wrap_Wrap"
                        android:ellipsize="end"
                        android:maxEms="16"
                        android:singleLine="true"
                        android:text="七莘路560弄06号七莘路560弄06号七莘路560弄06号七莘路560弄06号七莘路560弄06号"
                        android:textColor="#222"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    style="@style/Layout_Wrap_Wrap"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_listitem_username"
                        style="@style/Layout_Wrap_Wrap"
                        android:layout_width="64dp"
                        android:layout_marginRight="10dp"
                        android:ellipsize="end"
                        android:maxEms="12"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:text="黄老老师"
                        android:textColor="#666"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_listitem_mobile"
                        style="@style/Layout_Wrap_Wrap"
                        android:ellipsize="end"
                        android:maxEms="15"
                        android:singleLine="true"
                        android:text="15901609048"
                        android:textColor="#666"
                        android:textSize="13dp" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_listitem_line"
                    style="@style/Layout_Match_Wrap"
                    android:layout_height="1dp"
                    android:layout_marginTop="11dp"
                    android:background="@color/parding_line" />
            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_select"
            style="@style/Layout_Wrap_Wrap"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:button="@null"
            android:text="@string/select"
            android:textColor="@color/selector_textcolor_empty_to_green"
            android:background="@drawable/selector_btn_empty_to_green_corners_3dp"
            android:paddingTop="@dimen/spacing_5"
            android:paddingBottom="@dimen/spacing_5"
            android:paddingLeft="@dimen/spacing_10"
            android:paddingRight="@dimen/spacing_10"
            android:layout_marginRight="@dimen/spacing_12">
        </CheckBox>
    </RelativeLayout>
</LinearLayout>