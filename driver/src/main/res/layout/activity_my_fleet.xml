<?xml version="1.0" encoding="utf-8"?>
<!-- 我的车队 -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:orientation="vertical">
    <!-- 车队列表 -->
    <com.topjet.common.widget.RecyclerViewWrapper.RecyclerViewWrapper
        android:id="@+id/recyclerViewWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_background"
        android:layout_above="@+id/ll_all"/>

    <!-- 全部求货，全部休息 -->
    <LinearLayout
        android:id="@+id/ll_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/v3_common_blue"
        android:layout_alignParentBottom="true"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_all_work"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size17"
            android:text="@string/all_work"
            android:gravity="center"
            android:padding="@dimen/spacing_11"/>

        <View
            android:layout_width="@dimen/parting_line_width"
            android:layout_height="@dimen/spacing_20"
            android:background="@color/white"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_all_rest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size17"
            android:text="@string/all_rest"
            android:gravity="center"
            android:padding="@dimen/spacing_11"/>
    </LinearLayout>
</RelativeLayout>