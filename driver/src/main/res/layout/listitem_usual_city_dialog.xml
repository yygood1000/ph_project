<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/spacing_14"
        android:src="@drawable/iv_icon_local"/>

    <TextView
        android:id="@+id/tv_usual_city"
        style="@style/Layout_Wrap_Wrap"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_14"
        android:layout_toRightOf="@+id/iv_icon"
        android:text="常跑城市"
        android:textColor="@color/text_color_222222"
        android:textSize="15dp"/>

    <ImageView
        android:id="@+id/iv_usual_city"
        style="@style/Layout_Wrap_Wrap"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/spacing_12"
        android:src="@drawable/iv_icon_enter"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_icon_delete"
        style="@style/Layout_Wrap_Wrap"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/spacing_12"
        android:src="@drawable/iv_icon_delete"
        android:visibility="gone"/>

    <View
        android:id="@+id/parding_line"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/parting_line_heigth"
        android:layout_alignLeft="@+id/tv_usual_city"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tv_usual_city"
        android:background="@color/parding_line"/>

</RelativeLayout>