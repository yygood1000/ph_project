<?xml version="1.0" encoding="utf-8"?><!-- 车牌号选择弹窗-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout_Match_Match">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/Layout_Match_Match"
        android:layout_marginLeft="@dimen/spacing_23"
        android:layout_marginRight="@dimen/spacing_23"
        android:background="@drawable/shape_corners_bg_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="请选择省份"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/plate_wheel_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/spacing_15"
                android:paddingLeft="@dimen/spacing_18"
                android:paddingRight="@dimen/spacing_18"
                android:paddingTop="@dimen/spacing_15"
                android:src="@drawable/car_plate_close" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/parting_line_heigth"
            android:background="@color/parding_line"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_plate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/spacing_14"
            android:paddingTop="@dimen/spacing_12"/>

        <TextView
            android:id="@+id/plate_wheel_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_10"
            android:background="@drawable/shape_bottom_corners_bg_blue"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/spacing_13"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size17" />
    </LinearLayout>
</LinearLayout>