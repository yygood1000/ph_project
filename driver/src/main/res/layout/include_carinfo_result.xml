<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <!-- 车牌号 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing_12">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_car_number_result"
            android:textSize="@dimen/text_size15"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/spacing_12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/car_number"
            android:id="@+id/tv_car_number_title"
            android:textSize="@dimen/text_size15"
            android:textColor="@color/text_color_222222"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/parting_line_heigth"
            android:background="@color/color_dddddd"
            android:layout_alignBottom="@+id/tv_car_number_result"/>
    </RelativeLayout>

    <!-- 车牌色 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing_12">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_car_number_color_result"
            android:textSize="@dimen/text_size15"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/spacing_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/car_number_color"
            android:textSize="@dimen/text_size15"
            android:id="@+id/tv_car_number_color_title"
            android:textColor="@color/text_color_222222"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/spacing_12"
            android:paddingBottom="@dimen/spacing_12"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/parting_line_heigth"
            android:background="@color/color_dddddd"
            android:layout_alignBottom="@+id/tv_car_number_color_result"/>
    </RelativeLayout>

    <!-- 车型车长 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_type_length_result"
            android:textSize="@dimen/text_size15"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/spacing_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type_length"
            android:textSize="@dimen/text_size15"
            android:textColor="@color/text_color_222222"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/spacing_12"
            android:paddingBottom="@dimen/spacing_12"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_10"
        android:background="@color/common_background"/>
</LinearLayout>