<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
              android:paddingTop="@dimen/message_row_padding"
              android:paddingBottom="@dimen/message_row_padding">

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_chat_activity"
        android:layout_marginTop="@dimen/margin_chat_activity">

        <com.hyphenate.easeui.widget.EaseImageView
            android:id="@+id/iv_userhead"
            android:layout_width="@dimen/size_avatar"
            android:layout_height="@dimen/size_avatar"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/margin_chat_activity"
            android:src="@drawable/icon_default_avatar"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_chat_activity"
            android:layout_toLeftOf="@id/iv_userhead"
            android:background="@drawable/ease_chatto_bg"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/size_avatar"
            >

            <!-- 出发地 目的地 -->
            <LinearLayout
                style="@style/Layout_Wrap_Wrap"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_depart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textColor="@color/chat_text_color_normal"
                    android:singleLine="true"
                    android:maxWidth="120dp"
                    android:text="sssssssssssssssssssss"
                    android:textSize="@dimen/text_size16"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/order_icon_arrow_black"/>

                <TextView
                    android:id="@+id/tv_destination"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxWidth="120dp"
                    android:singleLine="true"
                    android:text="sssssssssssssssss"
                    android:textColor="@color/chat_text_color_normal"
                    android:textSize="@dimen/text_size16"/>
            </LinearLayout>

            <!-- 货型、重量、车型、是否可拼车 -->
            <TextView
                android:id="@+id/tv_truck_info"
                style="@style/Layout_Wrap_Wrap"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:maxWidth="200dp"
                android:textColor="@color/chat_text_color_33"
                android:text="ssss"
                android:textSize="@dimen/text_size13"/>

        </LinearLayout>
        <!-- 点击查看订单 -->
        <LinearLayout
            android:id="@+id/ll_show_order"
            android:padding="@dimen/message_padding"
            style="@style/Layout_Wrap_Wrap"
            android:orientation="horizontal"
            android:layout_alignRight="@+id/bubble"
            android:layout_below="@+id/bubble"
            android:layout_marginRight="5dp">
            <TextView
                android:textColor="@color/chat_text_color_33"
                style="@style/Layout_Wrap_Wrap"
                android:textSize="12sp"
                android:text="@string/click"/>
            <TextView
                android:id="@+id/tv_show_order"
                android:textColor="#84a1fd"
                style="@style/Layout_Wrap_Wrap"
                android:textSize="12sp"
                android:text="@string/show_order"/>
        </LinearLayout>

        <ImageView
            android:src="@drawable/ic_message_v"
            style="@style/image_message_bubble_triangle_right"/>
        <!-- 发送失败，显示的文本 -->
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/ease_include_resend"
            android:layout_below="@+id/bubble"
            android:layout_alignRight="@+id/bubble"
            android:layout_marginTop="@dimen/message_padding"
            />
        <ImageView
            android:id="@+id/msg_status"
            android:src="@drawable/ease_msg_state_failed_resend"
            style="@style/msg_status_style"
            android:layout_marginRight="-42dp"/>
        
        <TextView
            android:id="@+id/tv_ack"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/text_ack_msg"
            android:textSize="12sp"
            android:layout_toLeftOf="@id/bubble"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tv_delivered"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/text_delivered_msg"
            android:textSize="12sp"
            android:layout_toLeftOf="@id/tv_chatcontent"
            android:visibility="invisible"
            />
        
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:visibility="visible"
            android:layout_marginRight="-42dp"/>
    </RelativeLayout>

</LinearLayout>