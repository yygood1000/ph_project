<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ease_recording_hint_bg"
     android:padding="12dp"
    android:orientation="vertical"
    android:id="@+id/rl_record">

    <LinearLayout
        android:id="@+id/ll_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/iv_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mes_icon_voice_def"
            />
        <ImageView
            android:id="@+id/mic_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mes_icon_voice_line5"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>


    <!-- 语音动画 -->

    <TextView
        android:id="@+id/recording_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_mic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:padding="2dp"
        android:text="@string/move_up_to_cancel"
        android:textSize="14sp"
        android:textColor="@color/white"/>

</RelativeLayout>