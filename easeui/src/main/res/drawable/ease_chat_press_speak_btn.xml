<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>

            <padding android:bottom="5dp"
                     android:left="5dp"
                     android:right="5dp"
                     android:top="5dp"/>
            <gradient
                android:startColor="#AAFFBA00"
                android:endColor="#AAFF9E00"
                android:angle="180"/>

            <corners android:radius="4dp" />

        </shape>
    </item>
    <item>
        <shape>

            <padding android:bottom="5dp"
                     android:left="5dp"
                     android:right="5dp"
                     android:top="5dp"/>
            <gradient
                android:startColor="#FFBA00"
                android:endColor="#FF9E00"
                android:angle="180"/>

            <corners android:radius="4dp" />
        </shape>
    </item>

</selector>