<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_shipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_shipper_novice_boot_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:src="@drawable/shipper_novice_boot_1"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/iv_shipper_novice_boot_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="108dp"
            android:src="@drawable/shipper_novice_boot_2"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_shipper_novice_boot_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/shipper_novice_boot_3"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">


        <ImageView
            android:id="@+id/iv_driver_novice_boot_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:src="@drawable/driver_novice_boot_1"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/iv_driver_novice_boot_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/driver_novice_boot_2"
            android:visibility="gone"/>


        <ImageView
            android:id="@+id/iv_driver_novice_boot_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:src="@drawable/driver_novice_boot_3"
            android:visibility="gone"/>
    </LinearLayout>


</RelativeLayout>