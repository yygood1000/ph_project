<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical"
    android:id="@+id/ll_contact_empty"
    android:visibility="gone">

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_50"
        android:src="@drawable/icon_empty_familiar_car"/>

    <TextView
        android:id="@+id/tv_empty"
        style="@style/tv_size_13_color_22_style"
        android:layout_marginTop="@dimen/spacing_23"
        android:gravity="center"
        android:text="@string/empty_contact_msg"/>

    <TextView
        android:id="@+id/tv_btn_empty"
        style="@style/btn_green_line_lr22_tb8_r"
        android:layout_marginTop="@dimen/spacing_23"
        android:text="@string/setting_new"/>

</LinearLayout>