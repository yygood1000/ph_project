<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_background"
              android:orientation="vertical">

    <com.topjet.common.widget.RecyclerViewWrapper.RecyclerViewWrapper
        android:id="@+id/recyclerViewWrapper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/common_background"
        />

    <include layout="@layout/include_line_dd_full"/>
    <LinearLayout
        style="@style/Layout_Match_Wrap"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_btn_message"
            style="@style/tv_size_17_color_green_style"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/selector_btn_white"
            android:gravity="center"
            android:padding="@dimen/spacing_11"
            android:text="发私信"/>


        <TextView
            android:id="@+id/tv_btn_call"
            style="@style/tv_size_17_color_white_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@drawable/selector_btn_square_green"
            android:gravity="center"
            android:padding="@dimen/spacing_11"
            android:text="打电话"/>


    </LinearLayout>

</LinearLayout>