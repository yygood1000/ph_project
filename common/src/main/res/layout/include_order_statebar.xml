<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_order_press"
        style="@style/Layout_Match_Wrap"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/spacing_8"
        android:paddingTop="@dimen/spacing_8">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                style="@style/Layout_Wrap_Wrap"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_step1"
                    style="@style/Layout_Wrap_Wrap"
                    android:layout_height="@dimen/order_state_height"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/iv_order_state_left_gray"/>

                <TextView
                    android:id="@+id/tv_step1"
                    style="@style/Layout_Wrap_Wrap"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/spacing_10"
                    android:paddingRight="25dp"
                    android:text="已承接"
                    android:textColor="#999"
                    android:textSize="12sp"/>
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_step2"
                style="@style/Layout_Match_Wrap"
                android:layout_height="@dimen/order_state_height"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:src="@drawable/iv_order_state_middle_gray"/>

            <TextView
                android:id="@+id/tv_step2"
                style="@style/Layout_Wrap_Wrap"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/spacing_10"
                android:text="运费托管"
                android:textColor="#999"
                android:textSize="12sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_step3"
                style="@style/Layout_Match_Wrap"
                android:layout_height="@dimen/order_state_height"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:src="@drawable/iv_order_state_middle_gray"/>

            <TextView
                android:id="@+id/tv_step3"
                style="@style/Layout_Wrap_Wrap"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/spacing_10"
                android:text="已提货"
                android:textColor="#999"
                android:textSize="12sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                style="@style/Layout_Wrap_Wrap"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_step4"
                    style="@style/Layout_Wrap_Wrap"
                    android:layout_height="@dimen/order_state_height"
                    android:layout_gravity="left"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/iv_order_state_right_gray"/>

                <TextView
                    android:id="@+id/tv_step4"
                    style="@style/Layout_Wrap_Wrap"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/spacing_10"
                    android:paddingLeft="25dp"
                    android:text="已签收"
                    android:textColor="#999"
                    android:textSize="12sp"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</merge>