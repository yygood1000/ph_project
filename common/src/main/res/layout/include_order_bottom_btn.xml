<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout_Match_Wrap"
    android:orientation="vertical">


    <!-- 报价 -->
    <LinearLayout
        android:id="@+id/ll_quote"
        style="@style/Layout_Match_Wrap"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/white">

        <include layout="@layout/include_line_shadow" />

        <LinearLayout
            style="@style/Layout_Match_Wrap"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_10"
            android:paddingTop="@dimen/spacing_10">

            <LinearLayout
                style="@style/Layout_Match_Wrap"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="horizontal">

                <TextView
                    style="@style/tv_size_13_color_66_style"
                    android:text="已报价: " />

                <TextView
                    style="@style/tv_size_14_color_22_style"
                    android:text="￥"
                    android:textColor="@color/color_FFBA00" />

                <TextView
                    android:id="@+id/tv_quote"
                    style="@style/tv_size_21_color_yellow_style"
                    android:text="999999" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_waite_pay_deposit"
                style="@style/Layout_Match_Wrap"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="horizontal">

                <TextView
                    style="@style/tv_size_13_color_66_style"
                    android:text="待付定金: " />

                <TextView
                    style="@style/tv_size_14_color_22_style"
                    android:text="￥"
                    android:textColor="@color/color_btn_red" />

                <TextView
                    android:id="@+id/tv_waite_pay_deposit"
                    style="@style/tv_size_21_color_red_style"
                    android:text="999999" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/include_line_dd_full" />

    <LinearLayout
        style="@style/Layout_Match_Wrap"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_btn_one"
            style="@style/tv_size_17_color_green_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_white"
            android:gravity="center"
            android:padding="@dimen/spacing_11"
            android:text="修改订单" />

        <LinearLayout
            android:id="@+id/ll_btn_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_square_green"
            android:padding="@dimen/spacing_11"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_btn_two"
                style="@style/tv_size_17_color_white_style"
                android:text="查看报价" />
            <TextView
                android:id="@+id/tv_btn_two_right"
                style="@style/tv_size_17_color_white_style"
                android:text="(99+)"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>