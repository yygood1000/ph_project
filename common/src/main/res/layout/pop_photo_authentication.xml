<?xml version="1.0" encoding="utf-8"?><!-- 各种认证的拍照popupwindow -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/spacing_14">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/spacing_13"
            android:paddingTop="@dimen/spacing_13"
            android:text="title"
            android:textColor="@color/black_222222"
            android:textSize="@dimen/text_size17"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_cancel"
            android:src="@drawable/iv_icon_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_13"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_dddddd" />

    <TextView
        android:id="@+id/tv_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/spacing_10"
        android:text="@string/please_clear"
        android:textColor="@color/text_color_666666"
        android:textSize="@dimen/text_size14" />

    <ImageView
        android:id="@+id/iv_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/approve_head_eg" />

    <TextView
        android:id="@+id/tv_take_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_12"
        android:layout_marginRight="@dimen/spacing_12"
        android:layout_marginTop="@dimen/spacing_14"
        android:clickable="true"
        android:padding="@dimen/spacing_12"
        android:text="@string/take_photo"
        android:gravity="center"
        android:background="@drawable/selector_btn_corner_blue"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size17" />

    <TextView
        android:id="@+id/tv_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_12"
        android:layout_marginRight="@dimen/spacing_12"
        android:layout_marginTop="@dimen/spacing_14"
        android:background="@drawable/selector_btn_corner_blue"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/spacing_12"
        android:text="@string/album"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size17"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_password"
        android:layout_marginLeft="@dimen/spacing_12"
        android:layout_marginRight="@dimen/spacing_12"
        android:layout_marginTop="@dimen/spacing_10"
        android:background="@drawable/selector_btn_empty_to_blue"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/spacing_12"
        android:text="@string/cancel"
        android:textColor="@color/selector_textcolor_empty_to_blue"
        android:textSize="@dimen/text_size17" />
</LinearLayout>