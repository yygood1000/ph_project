<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/Layout_Match_Wrap"
              android:background="@drawable/shape_bg_dialog_root_r8"
              android:orientation="vertical">


    <TextView
        android:id="@+id/tv_title"
        style="@style/tv_size_15_color_22_style"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/spacing_11"
        android:paddingTop="@dimen/spacing_14"
        android:text="提付部分运费支付方式"/>

    <include layout="@layout/include_line_dd_full"/>

    <LinearLayout
        style="@style/Layout_Match_Wrap"
        android:orientation="vertical"
        android:paddingLeft="@dimen/spacing_16"
        android:paddingTop="@dimen/spacing_16">

        <TextView
            android:id="@+id/tv_freight"
            style="@style/tv_size_15_color_green_style"
            android:text="运费共计120元"/>

        <TextView
            style="@style/tv_size_14_color_66_style"
            android:layout_marginTop="@dimen/spacing_24"
            android:text="提付费"/>

        <LinearLayout
            style="@style/Layout_Match_Wrap"
            android:layout_marginBottom="@dimen/spacing_10"
            android:layout_marginRight="@dimen/spacing_16"
            android:layout_marginTop="@dimen/spacing_14"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_1"
                style="@style/tv_size_26_color_22_style"
                android:text="￥"/>

            <EditText
                android:id="@+id/et_pick_up_cost"
                style="@style/et_bidding_style"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="111"/>

            <CheckBox
                android:id="@+id/cb_pick_up_cost"
                style="@style/cb_green_style"
                android:checked="true"/>

            <TextView
                style="@style/tv_size_13_color_22_style"
                android:layout_marginLeft="@dimen/spacing_8"
                android:text="托管费用"
                />
        </LinearLayout>

        <include layout="@layout/include_line_dd_full"/>

        <TextView
            style="@style/tv_size_14_color_66_style"
            android:layout_marginTop="@dimen/spacing_24"
            android:text="到付费"/>

        <LinearLayout
            style="@style/Layout_Match_Wrap"
            android:layout_marginBottom="@dimen/spacing_10"
            android:layout_marginRight="@dimen/spacing_16"
            android:layout_marginTop="@dimen/spacing_14"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_2"
                style="@style/tv_size_26_color_22_style"
                android:text="￥"/>

            <EditText
                android:id="@+id/et_around"
                style="@style/et_bidding_style"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="111"
                android:text="222"/>

            <CheckBox
                android:id="@+id/cb_around_cost"
                style="@style/cb_green_style"
                android:checked="true"/>

            <TextView
                android:id="@+id/tv_around_cost_t"
                style="@style/tv_size_13_color_22_style"
                android:layout_marginLeft="@dimen/spacing_8"
                android:text="托管费用"
                />
        </LinearLayout>

        <include layout="@layout/include_line_dd_full"/>


        <TextView
            style="@style/tv_size_14_color_66_style"
            android:layout_marginTop="@dimen/spacing_24"
            android:text="回单付"/>

        <LinearLayout
            style="@style/Layout_Match_Wrap"
            android:layout_marginBottom="@dimen/spacing_10"
            android:layout_marginRight="@dimen/spacing_16"
            android:layout_marginTop="@dimen/spacing_14"
            android:orientation="horizontal">

            <TextView
                style="@style/tv_size_26_color_96_style"
                android:text="￥"
                />

            <TextView
                android:id="@+id/tv_back"
                style="@style/et_bidding_style"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/text_color_969696"
                android:text="0"/>


            <TextView
                style="@style/tv_size_13_color_22_style"
                android:layout_marginLeft="@dimen/spacing_8"
                android:text="此费用线下支付"
                />
        </LinearLayout>

        <include layout="@layout/include_line_dd_full"/>
    </LinearLayout>

    <LinearLayout
        style="@style/Layout_Match_Wrap"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_57">

        <TextView
            android:id="@+id/tv_btn_cancel"
            style="@style/tv_size_17_color_white_style"
            android:text="@string/cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/spacing_14"
            android:clickable="true"
            android:gravity="center"
            android:background="@drawable/selector_dialog_leftbtn_gray_bg_shipper"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_dddddd"/>

        <TextView
            android:id="@+id/tv_btn_confirm"
            style="@style/tv_size_17_color_white_style"
            android:text="@string/submit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/spacing_14"
            android:clickable="true"
            android:gravity="center"
            android:background="@drawable/selector_dialog_rightbtn_green_bg_shipper"/>
    </LinearLayout>

</LinearLayout>