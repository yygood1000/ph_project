<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

    <View
        android:id="@+id/view_statusbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@drawable/shape_bg_gradient_driver"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_webview_parent"
        style="@style/Layout_Match_Wrap"
        android:layout_above="@+id/btn_agree"
        android:layout_below="@+id/view_statusbar"
        android:orientation="vertical"/>

    <Button
        android:id="@+id/btn_agree"
        style="@style/BtnNotProjectionStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_btn_square_green"
        android:text="@string/agree"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size17"/>

</RelativeLayout>