<?xml version="1.0" encoding="utf-8"?>
<!-- 我要发货-》录入发货收货信息-》底部联系人数据为空 -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_20"
        android:src="@drawable/icon_empty"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_20"
        android:text="@string/no_has_contacts"
        android:textColor="@color/text_color_222222"
        android:textSize="@dimen/text_size13"/>

    <TextView
        android:id="@+id/tv_add_contacts"
        android:clickable="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contacts_add"
        android:textColor="@color/selector_textcolor_empty_to_green"
        android:background="@drawable/selector_btn_empty_to_green"
        android:textSize="@dimen/text_size15"
        android:layout_marginTop="@dimen/spacing_16"
        android:paddingTop="@dimen/spacing_7"
        android:paddingBottom="@dimen/spacing_7"
        android:paddingLeft="@dimen/spacing_22"
        android:paddingRight="@dimen/spacing_22"/>
</LinearLayout>