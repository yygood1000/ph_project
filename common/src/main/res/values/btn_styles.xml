<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--按钮 去除投影 样式-->
    <style name="BtnNotProjectionStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--首页两个主按钮样式-->
    <style name="HomeFragment_Primary_Btn_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/spacing_12</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:textSize">@dimen/text_size20</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--我的订单列表按钮样式-->
    <style name="MyOrderBtnStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/shape_bg_empty_r4</item>
        <item name="android:textColor">@color/text_color_222222</item>
    </style>

    <!--绿色勾勾CheckBox-->
    <style name="cb_green_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_cb_bg_green</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--蓝色勾勾CheckBox-->
    <style name="cb_blue_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_cb_bg_blue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btn_green_line_lr22_tb8_r">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/spacing_8</item>
        <item name="android:paddingBottom">@dimen/spacing_8</item>
        <item name="android:paddingRight">@dimen/spacing_22</item>
        <item name="android:paddingLeft">@dimen/spacing_22</item>
        <item name="android:background">@drawable/shape_bg_btn_border_green</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/v3_common_green</item>
        <item name="android:textSize">@dimen/text_size15</item>
    </style>


    <!--获取验证码按钮-->
    <style name="BtnCheckCode" parent="BtnNotProjectionStyle">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:textSize">@dimen/text_size15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_btn_corner_green</item>
        <item name="android:enabled">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--大号 带圆角 按钮 默认绿色背景
         绿色圆形背景 资源id:    selector_btn_corner_green
         蓝色圆形背景 资源id:    selector_btn_corner_blue
    -->
    <style name="BtnLargeWithCorner" parent="BtnNotProjectionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_large_height</item>
        <item name="android:textSize">@dimen/text_size17</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_btn_corner_green</item>
        <item name="android:enabled">false</item>
        <item name="android:gravity">center</item>
    </style>

    <!--大号 方形 按钮  默认绿色背景
        绿色方形背景 资源id: selector_btn_square_green
        蓝色方形背景 资源id: selector_btn_square_blue
    -->
    <style name="BtnLargeWithSquare" parent="BtnNotProjectionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_large_height</item>
        <item name="android:textSize">@dimen/text_size17</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_btn_square_green</item>
        <item name="android:gravity">center</item>
    </style>


</resources>