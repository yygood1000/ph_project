<?xml version="1.0" encoding="UTF-8"?>
<!-- 所有渐变黄色按钮都在这儿 -->
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_dddddd"/>
            <corners android:radius="@dimen/spacing_4"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="@color/color_FFBA00_clicked"
                android:startColor="@color/color_FF9E00_clicked"/>
            <corners android:radius="@dimen/spacing_4"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="@color/color_FFBA00"
                android:startColor="@color/color_FF9E00"/>
            <corners android:radius="@dimen/spacing_4"/>
        </shape>
    </item>
</selector>