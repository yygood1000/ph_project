<?xml version="1.0" encoding="UTF-8"?>


<!-- 司机版Dialog 单按钮 背景 -->
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_pressed_driver"/>
            <corners android:bottomLeftRadius="@dimen/auto_dialog_btn_corner"
                     android:bottomRightRadius="@dimen/auto_dialog_btn_corner"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:bottomLeftRadius="@dimen/auto_dialog_btn_corner"
                     android:bottomRightRadius="@dimen/auto_dialog_btn_corner"/>
        </shape>
    </item>
</selector>