<?xml version="1.0" encoding="UTF-8"?>
<!-- 空心按钮，点了变绿色渐变 -->
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="@color/green_button_end_color_clicked"
                android:startColor="@color/green_button_start_color_clicked"/>
            <corners android:radius="@dimen/radius_100"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners
                android:radius="@dimen/radius_100" />
            <solid android:color="@color/white"/>
            <stroke android:width="1dp"
                android:color="@color/text_color_16CA4E"/>
        </shape>
    </item>
</selector>