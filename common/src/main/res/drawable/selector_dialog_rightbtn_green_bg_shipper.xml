<?xml version="1.0" encoding="UTF-8"?>


<!-- 货主版Dialog 右边边按钮 绿色渐变背景 -->
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="@color/green_button_start_color_clicked"
                android:startColor="@color/green_button_end_color_clicked"/>
            <corners android:bottomRightRadius="@dimen/auto_dialog_btn_corner"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="@color/green_button_start_color_unclick"
                android:startColor="@color/green_button_end_color_unclick"/>
            <corners android:bottomRightRadius="@dimen/auto_dialog_btn_corner"/>
        </shape>
    </item>
</selector>