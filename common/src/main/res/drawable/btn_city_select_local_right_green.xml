<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"><shape>
            <solid android:color="@color/v3_common_green" />

            <stroke android:color="@color/v3_common_green" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="5dp" />
        </shape></item>
    <item android:state_checked="false"><shape>
            <solid android:color="@color/common_background" />

            <stroke android:color="@color/common_background" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="5dp" />
        </shape></item>

</selector>