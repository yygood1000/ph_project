<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:duplicateParentState="true">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_margin="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_default_avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_btn_out"
            android:layout_toRightOf="@id/iv_avatar"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_btn_out"
            style="@style/tv_size_13_color_22_style"
            android:paddingLeft="@dimen/spacing_8"
            android:paddingRight="@dimen/spacing_8"
            android:paddingBottom="@dimen/spacing_3"
            android:paddingTop="@dimen/spacing_3"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/spacing_12"
            android:gravity="center"
            android:text="@string/out_black_list"
            android:textColor="@drawable/em_blacklist_text_bg"
            android:visibility="visible" />

        <View
            android:id="@+id/v_line"
            style="@style/Layout_Match_Wrap"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="64dp"
            android:background="#dddddd" />
    </RelativeLayout>

</LinearLayout>