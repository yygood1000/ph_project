<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout style="@style/Layout_Match_Wrap">

        <LinearLayout
            android:id="@+id/ll_userbill"
            style="@style/Layout_Match_Match"
            android:layout_height="102.5dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/text_padding1">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_user"
                    style="@style/Layout_Wrap_Wrap"
                    android:layout_width="@dimen/img_width_main"
                    android:layout_height="@dimen/img_height_main"
                    android:layout_gravity="center"
                    android:src="@drawable/wallet_no_bill" />

                <ImageView
                    android:id="@+id/iv_user_new"
                    style="@style/Layout_Wrap_Wrap"
                    android:layout_width="@dimen/img_width_main1"
                    android:layout_height="@dimen/img_height_main1"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/wallet_ryt_new"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_user"
                style="@style/Layout_Wrap_Wrap"
                android:layout_marginTop="5dp"
                android:text="@string/wallet_userbill"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/text_size3" />
        </LinearLayout>

        <View
            android:id="@+id/v"
            android:layout_width="1px"
            android:layout_height="102.5dp"
            android:layout_alignParentRight="true"
            android:background="@color/bg_line_gray" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_line_gray" />

</LinearLayout>