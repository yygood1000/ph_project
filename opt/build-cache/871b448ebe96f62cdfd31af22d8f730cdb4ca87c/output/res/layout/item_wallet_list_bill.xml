<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_bank"
        style="@style/Layout_Match_Wrap"
        android:gravity="center"
        android:padding="@dimen/dp15">

        <com.topjet.wallet.ui.widget.RoundImageView
            android:id="@+id/iv_allbill_bankimg"
            android:layout_width="@dimen/dp34"
            android:layout_height="@dimen/dp34"
            android:layout_marginRight="@dimen/dp10"
            android:scaleType="centerCrop"
            android:src="@drawable/v3_default_avatar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_allbill_BankCardName"
                    style="@style/Layout_Match_Wrap"
                    android:layout_marginRight="@dimen/dp10"
                    android:text=""
                    android:textColor="@color/text_color0"
                    android:textSize="@dimen/sp14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_allbill_title"
                    style="@style/Layout_Match_Wrap"
                    android:text=""
                    android:textColor="@color/text_color0"
                    android:textSize="@dimen/sp10" />
            </LinearLayout>

            <Space
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/ll_time"
                style="@style/Layout_Wrap_Wrap">

                <TextView
                    android:id="@+id/tv_allbill_date"
                    style="@style/Layout_Match_Wrap"
                    android:layout_marginRight="@dimen/dp10"
                    android:text=""
                    android:textColor="@color/text_color_969696"
                    android:textSize="@dimen/sp11" />

                <TextView
                    android:id="@+id/tv_allbill_time"
                    style="@style/Layout_Match_Wrap"
                    android:text=""
                    android:textColor="@color/text_color_969696"
                    android:textSize="@dimen/sp11" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_money"
            style="@style/Layout_Wrap_Wrap"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_allbill_money"
                style="@style/Layout_Wrap_Wrap"
                android:text=""
                android:textColor="@color/text_color0"
                android:textSize="@dimen/sp20" />

            <TextView
                android:id="@+id/item_allbill_state"
                style="@style/Layout_Wrap_Wrap"
                android:text=""
                android:textColor="@color/text_color_969696"
                android:textSize="@dimen/sp10" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/view_line"
        android:layout_marginLeft="@dimen/dp15" />

</LinearLayout>