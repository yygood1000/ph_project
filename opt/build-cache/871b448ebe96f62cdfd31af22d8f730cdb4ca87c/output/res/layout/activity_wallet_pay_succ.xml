<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_root"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/Layout_Match_Wrap"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/white">

        <TextView
            style="@style/TitleBar_Wallet_Tv_Title"
            android:text="支付成功"
            android:textColor="@color/text_color0" />

        <TextView
            android:id="@+id/tv_paysucc_title_right"
            style="@style/Layout_Wrap_Wrap"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/text_padding2"
            android:text="完成"
            android:textColor="@color/text_color0"
            android:textSize="@dimen/text_size3" />
    </RelativeLayout>

    <LinearLayout
        style="@style/Layout_Match_Wrap"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_paysucc"
            style="@style/Layout_Wrap_Wrap"
            android:layout_marginTop="45dp"
            android:minHeight="@dimen/img_widthandheight3"
            android:minWidth="@dimen/img_widthandheight3"
            android:scaleType="centerCrop"
            android:src="@drawable/wallet_pay_succ_driver" />

        <TextView
            style="@style/Layout_Wrap_Wrap"
            android:layout_marginTop="16dp"
            android:paddingBottom="36dp"
            android:text="@string/wallet_payinfo_paysucess"
            android:textColor="@color/text_color0"
            android:textSize="@dimen/sp20" />
    </LinearLayout>

    <View style="@style/view_line" />

    <RelativeLayout
        style="@style/Layout_Match_Wrap"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/text_padding2">

        <TextView
            android:id="@+id/tv_paysucc_cash"
            style="@style/Layout_Wrap_Wrap"
            android:text="@string/wallet_payinfo_paysum"
            android:textColor="@color/text_color0"
            android:textSize="@dimen/text_size3" />

        <TextView
            android:id="@+id/tv_paysucc_msg"
            style="@style/Layout_Wrap_Wrap"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="@color/text_color0"
            android:textSize="@dimen/text_size3" />
    </RelativeLayout>

    <View style="@style/view_line" />

    <TextView
        android:id="@+id/tv_paysucc_content"
        style="@style/Layout_Match_Wrap"
        android:paddingLeft="@dimen/text_padding2"
        android:paddingRight="@dimen/text_padding2"
        android:paddingTop="@dimen/text_padding4"
        android:text="@string/wallet_payinfo_paysucessend"
        android:textColor="@color/text_color_969696"
        android:textSize="@dimen/text_size2"
        android:visibility="gone" />

</LinearLayout>