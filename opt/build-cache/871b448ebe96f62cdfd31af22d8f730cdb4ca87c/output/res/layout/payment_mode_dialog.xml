<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!--
         <ScrollView
        style="@style/Layout_Match_Match"
        android:scrollbars="none" >
    -->

    <LinearLayout
        style="@style/Layout_Match_Match"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_subpay_56loan"
            style="@style/Layout_Match_Wrap"
            android:background="@color/white"
            android:padding="@dimen/text_padding2" >

            <ImageView
                android:id="@+id/item_image0"
                android:layout_width="@dimen/img_widthandheight1"
                android:layout_height="@dimen/img_widthandheight1"
                android:layout_centerVertical="true"
                android:background="@drawable/wallet_ioan" />

            <LinearLayout
                android:id="@+id/ll_56loan"
                style="@style/Layout_Match_Wrap"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/item_image0"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_subpay_56loan"
                    style="@style/Layout_Wrap_Wrap"
                    android:text="@string/wallet_56loan"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/text_size3" />

                <TextView
                    android:id="@+id/tv_subpay_56recommend"
                    style="@style/Layout_Wrap_Wrap"
                    android:layout_width="32dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/bg_btn_gray"
                    android:gravity="center"
                    android:text="推荐"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size0" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_subpay_100money"
                style="@style/Layout_Wrap_Wrap"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/wallet_100money_recommend"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/text_size2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_subpay_selected"
                style="@style/Layout_Wrap_Wrap"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/wallet_checkbox_true"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            style="@style/view_line"
            android:layout_marginLeft="@dimen/text_padding2" />

        <ListView
            android:id="@+id/lv_subpay_detail"
            style="@style/Layout_Match_Match"
            android:divider="@null"
            android:scrollbars="none" />
    </LinearLayout>
    <!-- </ScrollView> -->

</LinearLayout>